<resources>
    <!-- Base application theme. -->
    <style name="Theme.BadiBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_alternative</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_contrast</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_alternative</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/secondary_contrast</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textViewStyle">@style/BarlowTextViewStyle</item>
        <item name="buttonStyle">@style/BarlowButtonStyle</item>

        <item name="android:navigationBarColor">@color/bottom_bar_background</item>
    </style>

    <style name="BarlowTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/barlow_semi_bold</item>
    </style>

    <style name="BarlowButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/barlow_semi_bold</item>
    </style>
</resources>